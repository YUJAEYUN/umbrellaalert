<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 눈 오는 날씨 - 흰색/연한 파란색 그라데이션 프레임 -->
    <gradient
        android:startColor="#E1F5FE"
        android:endColor="#F0F8FF"
        android:angle="45"
        android:type="linear" />
    
    <!-- 둥근 모서리 -->
    <corners android:radius="24dp" />
    
    <!-- 테두리 -->
    <stroke
        android:width="3dp"
        android:color="#B3E5FC" />
    
    <!-- 내부 패딩 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
