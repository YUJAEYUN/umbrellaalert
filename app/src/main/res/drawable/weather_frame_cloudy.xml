<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 구름 많은 날씨 - 회색 그라데이션 프레임 -->
    <gradient
        android:startColor="#B0BEC5"
        android:endColor="#CFD8DC"
        android:angle="45"
        android:type="linear" />
    
    <!-- 둥근 모서리 -->
    <corners android:radius="24dp" />
    
    <!-- 테두리 -->
    <stroke
        android:width="3dp"
        android:color="#90A4AE" />
    
    <!-- 내부 패딩 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
