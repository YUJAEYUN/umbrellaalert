<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 다크 모드 프레임 - 자연스러운 어두운 그라데이션 -->
    <gradient
        android:startColor="#2C2C2E"
        android:endColor="#1C1C1E"
        android:angle="135"
        android:type="linear" />
    
    <!-- 둥근 모서리 -->
    <corners android:radius="20dp" />
    
    <!-- 미묘한 하이라이트 효과를 위한 테두리 -->
    <stroke
        android:width="1dp"
        android:color="#3A3A3C" />
    
    <!-- 내부 패딩 -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
