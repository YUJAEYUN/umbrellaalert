<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 기본 앱 테마 (iOS 17 스타일) -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/ios_blue</item>
        <item name="colorPrimaryDark">@color/ios_blue</item>
        <item name="colorAccent">@color/ios_blue</item>
        <item name="colorSurface">@color/ios_card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- 상태 표시줄 설정 (iOS 17 스타일) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- 배경 설정 -->
        <item name="android:windowBackground">@color/ios_background</item>

        <!-- 기본 폰트 설정 -->
        <item name="android:fontFamily">@font/pretendard_font_family</item>

        <!-- 버튼 스타일 -->
        <item name="materialButtonStyle">@style/iOSButton</item>

        <!-- 카드 스타일 -->
        <item name="materialCardViewStyle">@style/iOSCard</item>

        <!-- 다이얼로그 스타일 -->
        <item name="materialAlertDialogTheme">@style/iOSDialog</item>

        <!-- 스위치 스타일 -->
        <item name="switchStyle">@style/iOSSwitch</item>
    </style>

    <!-- 버튼 스타일 -->
    <style name="CatButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 카드 스타일 -->
    <style name="CatCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- 다이얼로그 스타일 -->
    <style name="CatDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="shapeAppearanceOverlay">@style/CatDialogCorners</item>
        <item name="materialAlertDialogTitleTextStyle">@style/CatDialogTitle</item>
        <item name="buttonBarPositiveButtonStyle">@style/CatDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CatDialogButton</item>
    </style>

    <!-- 다이얼로그 모서리 스타일 -->
    <style name="CatDialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- 다이얼로그 제목 스타일 -->
    <style name="CatDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 다이얼로그 버튼 스타일 -->
    <style name="CatDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 입력 필드 스타일 -->
    <style name="CatInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>

    <!-- FAB 스타일 -->
    <style name="CatFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/alert_color</item>
        <item name="tint">#ffffff</item>
        <item name="borderWidth">0dp</item>
    </style>

    <!-- 스위치 스타일 -->
    <style name="CatSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/colorAccent</item>
        <item name="trackTint">@color/colorPrimary</item>
    </style>

    <!-- 텍스트 스타일 - 대제목 -->
    <style name="TextHeadline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/pretendard_font_family</item>
    </style>

    <!-- 텍스트 스타일 - 소제목 -->
    <style name="TextSubheader" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/pretendard_font_family</item>
    </style>

    <!-- 텍스트 스타일 - 본문 -->
    <style name="TextBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_font_family</item>
    </style>

    <!-- 텍스트 스타일 - 캡션 -->
    <style name="TextCaption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_font_family</item>
    </style>

    <!-- iOS 17 스타일 버튼 -->
    <style name="iOSButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/ios_button_corner_radius</item>
        <item name="android:paddingStart">@dimen/ios_button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/ios_button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/ios_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/ios_button_padding_vertical</item>
        <item name="android:minHeight">@dimen/ios_button_height</item>
        <item name="android:textSize">@dimen/ios_text_body</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/pretendard_font_family</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="backgroundTint">@color/ios_blue</item>
        <item name="rippleColor">@color/ios_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontWeight">500</item>
    </style>

    <!-- iOS 17 스타일 보조 버튼 -->
    <style name="iOSButtonSecondary" parent="iOSButton">
        <item name="backgroundTint">@color/ios_secondary_fill</item>
        <item name="android:textColor">@color/ios_blue</item>
        <item name="strokeColor">@color/ios_separator</item>
        <item name="strokeWidth">0.5dp</item>
    </style>

    <!-- iOS 17 스타일 카드 -->
    <style name="iOSCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/ios_card_corner_radius</item>
        <item name="cardElevation">@dimen/ios_card_elevation</item>
        <item name="contentPadding">0dp</item>
        <item name="cardBackgroundColor">@color/ios_card_background</item>
        <item name="android:layout_margin">@dimen/ios_spacing_xs</item>
    </style>

    <!-- iOS 17 스타일 대형 카드 -->
    <style name="iOSCardLarge" parent="iOSCard">
        <item name="cardCornerRadius">@dimen/ios_card_large_corner_radius</item>
        <item name="android:layout_margin">@dimen/ios_spacing_sm</item>
    </style>

    <!-- iOS 스타일 다이얼로그 -->
    <style name="iOSDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/ios_blue</item>
        <item name="colorAccent">@color/ios_blue</item>
        <item name="shapeAppearanceOverlay">@style/iOSDialogCorners</item>
        <item name="materialAlertDialogTitleTextStyle">@style/iOSDialogTitle</item>
        <item name="buttonBarPositiveButtonStyle">@style/iOSDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/iOSDialogButton</item>
    </style>

    <!-- iOS 스타일 다이얼로그 모서리 -->
    <style name="iOSDialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <!-- iOS 스타일 다이얼로그 제목 -->
    <style name="iOSDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/pretendard_font_family</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- iOS 스타일 다이얼로그 버튼 -->
    <style name="iOSDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/ios_blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/pretendard_font_family</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- Pretendard 폰트 전용 스타일들 -->

    <!-- 날씨 온도 표시용 스타일 -->
    <style name="WeatherTemperature">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/pretendard_font_family</item>
        <item name="android:fontWeight">300</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <!-- 큰 온도 표시용 스타일 -->
    <style name="TemperatureLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/pretendard_font_family</item>
        <item name="android:fontWeight">300</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 날씨 상태 표시용 스타일 -->
    <style name="WeatherCondition">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/pretendard_font_family</item>
        <item name="android:fontWeight">400</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- 위치명 표시용 스타일 -->
    <style name="LocationName">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/pretendard_font_family</item>
        <item name="android:fontWeight">500</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- 고양이 메시지 스타일 -->
    <style name="CatMessage">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_font_family</item>
        <item name="android:fontWeight">400</item>
        <item name="android:letterSpacing">-0.005</item>
    </style>

    <!-- 우산 알림 메시지 스타일 -->
    <style name="UmbrellaMessage">
        <item name="android:textColor">@color/alert_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_font_family</item>
        <item name="android:fontWeight">600</item>
        <item name="android:letterSpacing">-0.005</item>
    </style>

    <!-- iOS 17 스타일 스위치 -->
    <style name="iOSSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@android:color/white</item>
        <item name="trackTint">@color/ios_green</item>
        <item name="trackTintMode">src_in</item>
        <item name="android:thumb">@drawable/ios_switch_thumb</item>
        <item name="android:track">@drawable/ios_switch_track</item>
    </style>

    <!-- iOS 17 스타일 네비게이션 바 -->
    <style name="iOSNavigationBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ios_navbar_height</item>
        <item name="android:background">@color/ios_card_background</item>
        <item name="android:elevation">0dp</item>
        <item name="android:paddingStart">@dimen/ios_spacing_md</item>
        <item name="android:paddingEnd">@dimen/ios_spacing_md</item>
    </style>

    <!-- iOS 17 스타일 네비게이션 바 제목 -->
    <style name="iOSNavigationTitle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/ios_text_headline</item>
        <item name="android:fontFamily">@font/pretendard_font_family</item>
        <item name="android:fontWeight">600</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- iOS 17 스타일 리스트 아이템 -->
    <style name="iOSListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ios_list_item_height</item>
        <item name="android:background">@color/ios_card_background</item>
        <item name="android:paddingStart">@dimen/ios_spacing_md</item>
        <item name="android:paddingEnd">@dimen/ios_spacing_md</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- iOS 17 스타일 구분선 -->
    <style name="iOSSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ios_list_separator_height</item>
        <item name="android:background">@color/ios_separator</item>
        <item name="android:layout_marginStart">@dimen/ios_spacing_md</item>
    </style>
</resources>